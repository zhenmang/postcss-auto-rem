{
  "name": "postcss-auto-rem",
  "version": "3.0.0",
  "description": "PostCSS plugin that set rem automatically",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "auto-rem",
    "rem",
    "postcss-auto-rem",
    "smart-rem"
  ],
  "scripts": {
    "test": "jest",
    "build": "webpack --config webpack.config.js --mode=production"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "luoyupu <815355586@qq.com>",
  "license": "MIT",
  "repository": "lyp/postcss-auto-rem",
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-loader": "^9.2.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack-cli": "^6.0.1",
    "clean-publish": "^1.1.8",
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.2",
    "postcss": "^8.1.5"
  },
  "peerDependencies": {
    "postcss": "^8.1.5",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "babel-loader": "*",
    "ts-loader": "*",
    "typescript": "*",
    "webpack-cli": "*"
  },
  "peerDependenciesMeta": {
    "ts-loader": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "@babel/core": {
      "optional": true
    },
    "@babel/preset-env": {
      "optional": true
    },
    "babel-loader": {
      "optional": true
    },
    "webpack-cli": {
      "optional": true
    }
  }
}
